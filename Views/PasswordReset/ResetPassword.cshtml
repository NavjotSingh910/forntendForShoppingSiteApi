@model ResetPassword
@{
    ViewData["Title"] = "Reset Password";
}
<style>.container{
    display: block;
}
</style>

<h3> <strong>Homely Essentials</strong></h3>
<p class="mb-4">Your ultimate destination for all things home, "Homely Essentials" is a shopping website .</p>
   @if (ViewBag.Success != null && ViewBag.Success)
{
    <div class="alert alert-success" role="alert">
        Password reset enjoy your shoping.
    </div>
}else{
<form method="post" asp-action="Index" asp-controller="PasswordReset">
                <input type="hidden" asp-for="Token" />
                <div class="form-group first">
                    <label for="password">New Password</label>
                    <input type="password" class="form-control" asp-for="Password" required />
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" required />
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
}